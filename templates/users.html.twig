<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/users.css">
</head>
<body>
<div class="container mt-5">
    <h1 class="mb-4">Users</h1>
    <div class="mb-3">
        <form action="/users" method="get" class="d-flex mb-3">
            <select name="searchType" class="form-select me-2">
                <option value="name">Name</option>
                <option value="email">Email</option>
            </select>
            <input type="text" name="q" class="form-control me-2" placeholder="Buscar...">
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
        <a href="/users?sort=asc" class="btn btn-primary">Sort by oldest</a>
        <a href="/users?sort=desc" class="btn btn-primary">Sort by most recent</a>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Email</th>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            <!-- Ejemplo de datos ficticios -->
            <tr>
                <td>1</td>
                <td>johndoe@example.com</td>
                <td>John</td>
                <td>Doe</td>
                <td>
                    <form action="/users/1/delete" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Delate</button>
                    </form>
                </td>
            </tr>
            <tr>
                <td>2</td>
                <td>janedoe@example.com</td>
                <td>Jane</td>
                <td>Doe</td>
                <td>
                    <form action="/users/2/delete" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Delate</button>
                    </form>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
    <a href="/dashboard" class="btn btn-secondary mt-3">Back to dashboard</a>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
